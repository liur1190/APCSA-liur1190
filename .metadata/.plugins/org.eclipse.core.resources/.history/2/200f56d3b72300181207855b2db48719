import java.util.Arrays;
import java.util.Scanner;
import static java.lang.System.*;
import static java.util.Arrays.*;

public class Grades
{
	private double[] grades;
	
	public Grades()
	{
		setGrades("");
	}
	
	public Grades(String gradeList)
	{
		setGrades(gradeList);		
	}
	
	public void setGrades(String gradeList)
	{
		int size = Integer.parseInt(gradeList.substring(0, 1));
		grades = new double[size];
		int index = 3;
		for (int i = 0; i < size - 1; i++)
		{
			int start = gradeList.indexOf(" ", index);
			index = start + 1;
			int end = gradeList.indexOf(" ", index);
			double value = Double.parseDouble(gradeList.substring(start, end));
			grades[i] = value;
			out.println(value);
			//have to figure out how to get the fifth grade because it isn't bound by spaces at the start and end, have to make end a quotation mark
		}




	}
	
	public void setGrade(int spot, double grade)
	{
		grades[spot] = grade;

	}
	
	public double getSum()
	{
		double sum=0.0;
		for (int i = 0; i < grades.length; i++)
			sum+=grades[i];

		return sum;
	}
	
	public double getLowGrade()
	{
		double low = Double.MAX_VALUE;
		int index = -1;
		for (int i = 0; i < grades.length; i++)
		{
			double value = grades[i];
			if (value < low)
			{
				low = value;
				index = i;
			}
		}
		return low;

	}
	
	public double getHighGrade()
	{
		double high = Double.MIN_VALUE;
		int index = -1;
		for (int i = 0; i < grades.length; i++)
		{
			double value = grades[i];
			if (value > high)
			{
				high = value;
				index = i;
			}
		}
		return high;

	}
	
	public int getNumGrades()
	{
		return grades.length;
	}
	
	public String toString()
	{
		String output="";
		output = grades + "\nsum = " + getSum() + "\nnum grades = " + getNumGrades() + "\nlowgrade: " + getLowGrade() + "\nhigh grade = " + getHighGrade();


		return output;
	}	
}