import java.util.Random;
import java.util.Scanner;
import static java.lang.System.*;

public class GuessingGame
{
	private int upperBound;
	private int right;
	private int n;

	public GuessingGame(int stop)
	{
		upperBound = stop;
		right = (int) (Math.random() * upperBound);
		n = 1;
		
	}

	public void playGame()
	{
		Scanner keyboard = new Scanner(System.in);
		System.out.println("Enter a number between 1 and " + upperBound);
		double user1 = keyboard.nextInt();
		while (user1 != right)
		{
			System.out.println("Enter a number between 1 and " + upperBound);
			user1 = keyboard.nextInt();
			n++;
		}
		

	}

	public String toString()
	{
		int percentage = ((n-1)/n) * 10;
		String output = "It took " + n + " guesses to get to " + right + "\nYou guessed wrong " + percentage + " percent of the time";
		return output;
	}
}