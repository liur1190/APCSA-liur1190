import static java.lang.System.*;

public class AtCounter
{
   private char[][] atMat;
   private int atCount;

	public AtCounter()
	{
		atCount=0;
		atMat = new char[][]{		{'@','-','@','-','-','@','-','@','@','@'},
									{'@','@','@','-','@','@','-','@','-','@'},
									{'-','-','-','-','-','-','-','@','@','@'},
									{'-','@','@','@','@','@','-','@','-','@'},
									{'-','@','-','@','-','@','-','@','-','@'},
									{'@','@','@','@','@','@','-','@','@','@'},
									{'-','@','-','@','-','@','-','-','-','@'},
									{'-','@','@','@','-','@','-','-','-','-'},
									{'-','@','-','@','-','@','-','@','@','@'},
									{'-','@','@','@','@','@','-','@','@','@'}};
	}

	public void countAts(int r, int c)
	{

		//add in recursive code to count up the # of @s connected
		//start checking at spot [r,c]
		int count = 0;
		if (r < atMat.length && r >=0 && c < atMat.length && c>= 0 && atMat[r][c] == '@')
		{
			atMat[r][c] = '-';
			atCount++;
			countAts(r-1, c);
			countAts(r, c-1);
			countAts(r+1,c);
			countAts(r, c+1);
		}
		
		/**if (atMat[r][c] == '@')
		{
			atCount++;
			atMat[r][c] = 'f';
			if (c < 9)
				countAts(r, c+1);
			if (c > 0)
				countAts(r, c-1);
			if (r < 9)
				countAts(r+1, c);
			if (r > 0)
				countAts(r-1, c);
		}


		atCount+=count;**/
		//return atCount;
	}

	public int getAtCount()
	{
		return atCount;
	}

	public String toString()
	{
		String output="";
		output+=getAtCount()+" @s connected.";
		return output;
	}
}