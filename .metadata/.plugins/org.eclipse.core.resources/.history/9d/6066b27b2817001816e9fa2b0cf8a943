	public String toString()
	{
		int a = 0;
		int b = 0;
		int c = 0;
		String output="";
		for (a = 1; a < number; a++)
		{
			int aa = a*a;
			b = a + 1;
			c = b + 1;
			while (c <= number)
			{
				int cc = aa + b*b;
				while (c*c < cc) {c++;}
				{
					if (c*c == cc && c <= number)
					{
						output = output + a + ", " + b + ", " + c;
					}
					b++;
				}
			}
		}
		return output+"\n";
	}
}