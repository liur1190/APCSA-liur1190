import java.lang.System;
import java.lang.Math;
import java.util.Scanner;

public class Grades
{
	//instance variables
	private double[] grades;
	

	//constructor
	public Grades()
	{
		grades = new double[5];
	}

	//set method
	public void setGrades(double[] nums)
	{
		grades = nums;
	}



	private double getSum()
	{
		double sum=0.0;
		for (int spot = 0; spot < grades.length; spot++)
		{
			sum+=grades[spot];
		}
		return sum;
	}

	public double getAverage()
	{
		double average=0.0;
		average = getSum()/grades.length;
		return average;
	}


	//toString method
	public String toString()
	{
		String output = "";
		
		return output;
	}



}