import static java.lang.System.*;

public class Triples
{
   private int number;

	public Triples()
	{
		this(0);
		setNum(0);
	}

	public Triples(int num)
	{
		setNum(number);
	}

	public void setNum(int num)
	{
		number = num;
	}
	
	private int gCF(int a, int b, int c)
	{
		int max = 0;
		

		//return 1;
	}

	public String toString()
	{
		int a = 0;
		int b = 0;
		int c = 0;
		String output="";
		for (a = 1; a < number; a++)
		{
			int aa = a*a;
			b = a + 1;
			c = b + 1;
			while (c <= number)
			{
				int cc = aa + b*b;
				while (c*c < cc) {c++;}
				{
					if (c*c == cc && c <= number)
					{
						if (a % 2 == 0 && b % 2 == 0 && c % 2 == 0)
						{
							output = output + " ";
						}
						output = output + a + ", " + b + ", " + c + "\n";
					}
					b++;
				}
			}
		}
		return output+"\n";
	}
}